SECRET_KEY=CHANGE_ME
ALLOWED_HOSTS=*
DJANGO_SETTINGS_MODULE=config.settings.development

# Database
# Preferred: set DATABASE_URL (works for Docker + hosted Postgres like Neon/Render)
# Docker (inside web container):
# DATABASE_URL=postgresql://postgres:postgres@db:5432/postgres
# Hosted (example):
# DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME?sslmode=require&channel_binding=require
DATABASE_URL=

# Optional overrides (used when DATABASE_URL is NOT set)
DB_NAME=postgres
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_HOSTNAME=db
DB_PORT=5432

# Optional Postgres SSL/SCRAM settings (used when ENGINE is PostgreSQL)
DB_SSLMODE=
DB_CHANNEL_BINDING=

# PG_Bouncer
BOUNCER_USER=username
BOUNCER_PASSWORD=strongpassword
BOUNCER_HOST=pgbouncer
BOUNCER_PORT=6432
# NGINX
NGINX_PORT=80

# Debug
DEBUG=True

# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# BOT
BOT_TOKEN=
CHANNEL=
CHAT_ID=

# Firebase
FCM_SERVER_KEY=

# Media storage (recommended for production)
# Cloudinary example:
# CLOUDINARY_URL=cloudinary://API_KEY:API_SECRET@CLOUD_NAME
CLOUDINARY_URL=

# Importing TEST SOURCE images (local/dev helper)
# After setting DATABASE_URL + (optionally) CLOUDINARY_URL, run:
#   python manage.py import_test_source_images --root "C:\\path\\to\\TEST SOURCE\\TEST SOURCE" --categories --products --banners --apply